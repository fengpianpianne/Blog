---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts', ({ data }) => !data.draft))
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime());
---

<BaseLayout title="首页">
  <section class="max-w-3xl mx-auto px-4 py-10">
    <h1 class="text-3xl font-bold mb-6">最新文章</h1>
    <ul class="space-y-6">
      {posts.map(({ id, slug, data }) => (
        <li class="border-b border-gray-200 dark:border-gray-800 pb-6">
          <a href={`/posts/${slug}/`} class="text-xl font-semibold text-primary-600 hover:underline">{data.title}</a>
          {data.description && <p class="mt-2 text-gray-600 dark:text-gray-300">{data.description}</p>}
          <p class="mt-2 text-sm text-gray-500">{new Date(data.publishDate).toLocaleDateString()}</p>
          {data.tags?.length > 0 && (
            <div class="mt-3 flex flex-wrap gap-2">
              {data.tags.map((t) => (
                <a href={`/tags/${t}/`} class="px-2 py-1 text-xs rounded bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-200 hover:bg-gray-200 dark:hover:bg-gray-700">#{t}</a>
              ))}
            </div>
          )}
        </li>
      ))}
    </ul>
  </section>
</BaseLayout>
