---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import Pagination from '@/components/Pagination.astro';

const PER_PAGE = 10;
export async function getStaticPaths() {
  const posts = (await getCollection('posts', ({ data }) => !data.draft))
    .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime());
  const total = Math.ceil(posts.length / PER_PAGE);
  return Array.from({ length: total - 1 }, (_, i) => ({ params: { page: String(i + 2) } }));
}

const current = Number(Astro.params.page);
const all = (await getCollection('posts', ({ data }) => !data.draft))
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime());
const start = (current - 1) * PER_PAGE;
const pagePosts = all.slice(start, start + PER_PAGE);
---
<BaseLayout title={`第 ${current} 页`}>
  <section class="max-w-3xl mx-auto px-4 py-10">
    <h1 class="text-3xl font-bold mb-6">文章列表 · 第 {current} 页</h1>
    <ul class="space-y-6">
      {pagePosts.map(({ slug, data }) => (
        <li class="border-b border-gray-200 dark:border-gray-800 pb-6">
          <a href={`/posts/${slug.split('/').pop()}/`} class="text-xl font-semibold text-primary-600 hover:underline">{data.title}</a>
          {data.description && <p class="mt-2 text-gray-600 dark:text-gray-300">{data.description}</p>}
          <p class="mt-2 text-sm text-gray-500">{new Date(data.publishDate).toLocaleDateString()}</p>
        </li>
      ))}
    </ul>

    <Pagination
      current={current}
      total={Math.ceil(all.length / PER_PAGE)}
      makeHref={(p) => (p === 1 ? '/' : `/page/${p}/`)}
    />
  </section>
</BaseLayout>
