---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import Pagination from '@/components/Pagination.astro';

const PER_PAGE = 10;
export async function getStaticPaths() {
  const posts = await getCollection('posts', ({ data }) => !data.draft);
  const tagCounts = new Map<string, number>();
  for (const p of posts) for (const t of p.data.tags || []) tagCounts.set(t, (tagCounts.get(t) || 0) + 1);
  const paths: { params: { tag: string; page: string } }[] = [];
  for (const [tag, count] of tagCounts) {
    const pages = Math.ceil(count / PER_PAGE);
    for (let i = 2; i <= pages; i++) paths.push({ params: { tag, page: String(i) } });
  }
  return paths;
}

const tag = Astro.params.tag!;
const current = Number(Astro.params.page);
const posts = (await getCollection('posts', ({ data }) => (data.tags || []).includes(tag) && !data.draft))
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime());
const start = (current - 1) * PER_PAGE;
const pagePosts = posts.slice(start, start + PER_PAGE);
const hasPrev = current > 2;
const hasNext = start + PER_PAGE < posts.length;
---
<BaseLayout title={`标签：${tag} · 第 ${current} 页`}>
  <section class="max-w-3xl mx-auto px-4 py-10">
    <h1 class="text-3xl font-bold mb-6">标签：{tag}</h1>
    <ul class="space-y-6">
      {pagePosts.map(({ slug, data }) => (
        <li class="border-b border-gray-200 dark:border-gray-800 pb-6">
          <a href={`/posts/${slug.split('/').pop()}/`} class="text-xl font-semibold text-primary-600 hover:underline">{data.title}</a>
          {data.description && <p class="mt-2 text-gray-600 dark:text-gray-300">{data.description}</p>}
          <p class="mt-2 text-sm text-gray-500">{new Date(data.publishDate).toLocaleDateString()}</p>
        </li>
      ))}
    </ul>

    <Pagination
      current={current}
      total={Math.ceil(posts.length / PER_PAGE)}
      makeHref={(p) => (p === 1 ? `/tags/${tag}/` : `/tags/${tag}/page/${p}/`)}
    />
  </section>
</BaseLayout>
