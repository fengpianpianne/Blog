---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('posts', ({ data }) => !data.draft);
const tagMap = new Map<string, number>();
for (const p of posts) {
  for (const t of p.data.tags || []) tagMap.set(t, (tagMap.get(t) || 0) + 1);
}
const tags = [...tagMap.entries()].sort((a,b) => b[1] - a[1]);
---

<BaseLayout title="所有标签">
  <section class="max-w-3xl mx-auto px-4 py-10">
    <h1 class="text-3xl font-bold mb-6">所有标签</h1>
    <div class="flex flex-wrap gap-3">
      {tags.map(([t, c]) => (
        <a href={`/tags/${t}/`} class="px-3 py-1 rounded bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-200 hover:bg-gray-200 dark:hover:bg-gray-700">#{t} ({c})</a>
      ))}
    </div>
  </section>
</BaseLayout>
